<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sns.like.mapper.LikeMapper">
	<select id="selectLikeList" resultType="com.sns.like.domain.Like">
		SELECT
			`postId`
			,`userId`
			,`createdAt`
		FROM
			`like`
	</select>
	
	<select id="selectLikeByPostIdUserId" parameterType="map" resultType="com.sns.like.domain.Like">
		SELECT
			`postId`
			,`userId`
			,`createdAt`
		FROM
			`like`
		WHERE
			`postId` = #{postId} AND
			`userId` = #{userId}
	</select>
	
	<select id="selectLikeCountByPostIdUserId" parameterType="map" resultType="int">
		SELECT
			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId} AND
			`userId` = #{userId}
	</select>
	
	<select id="selectLikeCountByPostId" parameterType="int" resultType="int">
		SELECT
			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
	</select>
	
	<insert id="insertLike" parameterType="map">
		INSERT INTO `like`
		(
			`postId`
			,`userId`
			,`createdAt`
		)
		VALUES
		(
			#{postId}
			,#{userId}
			,NOW()
		)
	</insert>
	
	<delete id="deleteLike" parameterType="map">
		DELETE FROM `like`
		WHERE
			`postId` = #{postId} AND
			`userId` = #{userId}
	</delete>
</mapper>